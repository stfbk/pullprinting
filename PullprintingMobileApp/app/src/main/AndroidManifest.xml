<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="eu.fbk.st.pullprinting">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="eu.fbk.st.pullprinting.Activities.CieTokenActivity"
            android:label="CieTokenActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="eu.fbk.st.pullprinting.Activities.CieAuth"
            android:label="@string/title_activity_cie_auth"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eu.fbk.st.pullprinting.Activities.Printer_list"
            android:label="Lista Stampanti"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eu.fbk.st.pullprinting.Activities.QrReader"
            android:label="QrCode Reader" />
        <activity
            android:name="eu.fbk.st.pullprinting.Activities.Stampa"
            android:label="@string/title_activity_stampa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eu.fbk.st.pullprinting.Activities.TokenActivity"
            android:label="FBK Pull Printing"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="eu.fbk.st.pullprinting.Activities.MainActivity"
            android:label="FBK Pull Printing"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "example://gizmosâ€ -->
                <data android:scheme="https"
                    android:host="idp-ipzs.fbk.eu"
                    android:path="/CustomTab"/>
            </intent-filter>
        </activity>

        <activity android:name="net.openid.appauth.RedirectUriReceiverActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="https"
                    android:host="appauth.demo-app.io"
                    android:path="/oauth2redirect"/>
            </intent-filter>
        </activity>

        <receiver android:name="eu.fbk.st.pullprinting.Utilities.RemainderBroadcast"/>

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />
    </application>

</manifest>